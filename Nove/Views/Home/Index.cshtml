@model IEnumerable<Book>

@{
    ViewBag.Title = "首页";
}

<style>
    .container-flex {
        display: flex;
    }

        .container-flex .card {
            margin: 30px;
        }
</style>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/小绿.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/风与焰.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/放下剑做我的新娘.png" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="shadow-sm p-3 mb-5 bg-white rounded"></div>
@*书显示部分*@
<h2>全部小说</h2>
<div class="container-flex">
    @{
        foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <img src="@item.bigImage" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.bookName</h5>
                    <a asp-controller="Detail" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">去看看</a>
                </div>
            </div>
        }
    }
</div>