
@{
    ViewData["Title"] = "Index";
}

<div class="row" style="padding-top:30px;padding-bottom:50px">
    <div class="col-sm">
        <a class="btn btn-primary" asp-controller="UserCenter" asp-action="Index" role="button">我的小说</a>
    </div>
    <div class="col-sm">
        <a class="btn btn-primary" asp-controller="Collection" asp-action="Index" role="button">我的收藏</a>
    </div>
    <div class="col-sm">
        <a class="btn btn-primary" asp-controller="Submission" asp-action="Index" role="button">投稿</a>
    </div>
    <div class="col-sm">
        <a class="btn btn-primary" asp-controller="Manage" asp-action="Index" role="button">投稿管理</a>
    </div>
</div>

<form method="post" asp-action="Submission">
    <div class="form-group">
        <label for="exampleFormControlInput1">书 名</label>
        <input type="text" class="form-control" id="bookName">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">选择分类</label>
        <select class="form-control" id="sort">
            <option id="1">初级</option>
            <option id="2">中级</option>
            <option id="3">高级</option>
        </select>
    </div>
    @*传图片*@
    <div class="form-group">
        <label for="exampleFormControlFile1">上传图片</label>
        <input type="file" class="form-control-file" id="imgFile">
    </div>
    @*传文件*@
    <div class="form-group">
        <label for="exampleFormControlFile2">小说内容上传</label>
        <input type="file" class="form-control-file" id="txtFile">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>