                            <img src="@b.smallImage" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@b.bookName</h5>
                                <a href="#" class="btn btn-primary">去看看</a>
                            </div>
                        </div>
                    }
                }
            }
        }
    </div>
    <div class="col-sm">
        <p>高级</p>
        @{
            foreach (var s in Model)
            {
                foreach (var b in s.Books)
                {
                    if (s.Id == 3)
                    {
                        <div class="card" style="width: 18rem;">
                            <img src="@b.smallImage" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@b.bookName</h5>
                                <a href="#" class="btn btn-primary">去看看</a>
                            </div>
                        </div>
                    }
                }
            }
        }
    </div>
</div>